<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/delete_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Are you sure you want delete this message?"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/cancel_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_message_input"
        android:layout_marginTop="28dp"
        android:text="Cancel"
        android:textColor="@color/light_grey" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_below="@id/delete_message_input"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/delete_button_color"/>

</RelativeLayout >