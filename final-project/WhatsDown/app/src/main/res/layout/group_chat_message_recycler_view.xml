<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/sender_chat_color"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/left_chat_username_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/off_white"
            android:textSize="11sp" />

        <VideoView
            android:id="@+id/left_chat_video_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/left_chat_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/off_white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/left_chat_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/off_white"
            android:textSize="11sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/receiver_chat_color"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/right_chat_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/off_white"
            android:textSize="18sp"/>
        <VideoView
            android:id="@+id/right_chat_video_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/right_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/off_white"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:textAlignment="textEnd"/>
    </LinearLayout>

</RelativeLayout>