<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/black"
        android:layout_margin="2dp"
        android:id="@+id/receiver_tv"
        android:background="@drawable/reciever_back"
        android:textSize="15sp"
        android:padding="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:id="@+id/sender_tv"
        android:background="@drawable/sender_back"
        android:textSize="15sp"
        android:padding="9dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_sender"
        android:layout_gravity="right"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_receiver"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/llsender"
        android:layout_margin="1dp"
        android:layout_gravity="right">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/play_white"
            android:background="@drawable/sender_left"
            android:id="@+id/play_message_sender"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Audio File"
            android:gravity="center"
            android:background="@drawable/sender_right"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/llreceiver"
        android:layout_margin="1dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/play_black"
            android:background="@drawable/receiver_left"
            android:id="@+id/play_message_receiver"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Audio File"
            android:gravity="center"
            android:background="@drawable/receiver_right"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llsender_video"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_margin="1dp">

        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/senderVideoView"
            app:use_controller="true"
            app:show_timeout="3000"
            app:controller_layout_id="@layout/custom_exoplayer"
            android:visibility="visible"
            app:resize_mode="fixed_height"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llreceiver_video"
        android:visibility="gone"
        android:layout_margin="1dp">

        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/receiver_VideoView"
            app:use_controller="true"
            app:show_timeout="3000"
            app:controller_layout_id="@layout/custom_exoplayer"
            android:visibility="visible"
            app:resize_mode="fixed_height"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llsender_gif"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/senderGifImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llreceiver_gif"
        android:layout_gravity="right"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/receiverGifImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>