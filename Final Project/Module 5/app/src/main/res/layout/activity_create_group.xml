<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".CreateGroupActivity">


    <RelativeLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:padding="5dp"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/cancel_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_marginStart="10dp"
            android:text="Cancel"
            android:textColor="@color/blue"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:onClick="onCancelTextViewClick" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="Add Members"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        />

        <TextView
            android:id="@+id/next_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textColor="@color/blue"
            android:paddingTop="15dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:onClick="onNextTextViewClick" />





    </RelativeLayout>



        <EditText
            android:id="@+id/seach_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/main_toolbar"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:elevation="1dp"
            android:backgroundTint="@color/light_grey"
            android:drawableStart="@drawable/search_icon"
            android:hint=" Search Users"
            android:textColor="#9BA3AD"
            android:minHeight="48dp"
            android:padding="10dp" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_user_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seach_username_input"
            android:padding="10dp" />


    </RelativeLayout>




