<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".GroupNameActivity">


    <RelativeLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:padding="5dp"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/previous_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_marginStart="10dp"
            android:text="Previous"
            android:textColor="@color/blue"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:onClick="onPreviousTextViewClick" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="New Group"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        />

        <TextView
            android:id="@+id/create_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textColor="@color/blue"
            android:paddingTop="15dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:layout_alignParentEnd="true"
             />





    </RelativeLayout>



    <EditText
        android:id="@+id/group_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/main_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="1dp"
        android:backgroundTint="@color/white"

        android:hint=" Group Name"
        android:textColor="#9BA3AD"
        android:minHeight="48dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/selected_members_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/group_name_input"
        android:text="   Selected Members: 0"
        android:textColor="#9BA3AD"
        android:textSize="18sp" />


</RelativeLayout>

