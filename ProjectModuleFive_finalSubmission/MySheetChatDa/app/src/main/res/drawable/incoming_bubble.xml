<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item
        android:id="@+id/background_shape"
        android:drawable="@drawable/incoming_bubble_shape" />

    <!-- Message Padding -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp">
        <bitmap android:src="@drawable/ic_incoming_arrow" />
    </item>

</layer-list>
