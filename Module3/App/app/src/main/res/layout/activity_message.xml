<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary">

    <include layout="@layout/banner_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/messageEditText"
        android:layout_below="@id/returnButton"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorSecondary"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@id/sendAttachment"
        android:autofillHints="Message"
        android:background="@android:color/white"
        android:hint="@string/type_your_message"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/messageEditText"
        android:layout_toEndOf="@id/messageEditText"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/send"
        android:drawableEnd="@drawable/baseline_chevron_right_24"
        android:onClick="sendMessage" />

    <Button
        android:id="@+id/sendAttachment"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/messageEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_attach_file_24"
        android:onClick=""
        tools:ignore="OnClick"
        android:contentDescription="@string/attach_button_description"/>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/banner_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/baseline_close_24"
        android:contentDescription="@string/back_to_user_selection"
        android:text="" />

    <TextView
        android:id="@+id/partnerNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/returnButton"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>
