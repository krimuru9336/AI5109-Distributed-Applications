<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/messageBackgroundContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/outgoing_message_background"
        android:padding="8dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!-- Horizontal layout for username, timestamp, and optional space -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Username TextView -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- Timestamp TextView -->
            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Message TextView -->
        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/messageImageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="@string/img_description" />

        <androidx.media3.ui.PlayerView
            android:id="@+id/messageVideoView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <!-- Horizontal layout for edit label, edit timestamp, and optional space -->
        <LinearLayout
            android:id="@+id/editInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- Edit Label TextView -->
            <TextView
                android:id="@+id/editLabelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:maxLines="1"
                android:text="@string/last_edited_on"
                android:ellipsize="end"
                android:layout_weight="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- Edit Timestamp TextView -->
            <TextView
                android:id="@+id/editTimestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>