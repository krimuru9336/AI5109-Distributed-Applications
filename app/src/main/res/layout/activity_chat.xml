<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChatActivity">

    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:padding="10dp">

        <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back_arrow"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:contentDescription="Back Arrow"
                android:onClick="onBackButtonClick"/>

        <ImageView
                android:id="@+id/img_account"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_account_round"
                app:tint="@color/white"
                android:contentDescription="Account Icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_back"/>

        <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_account"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_below="@id/toolbar"
            android:fillViewport="true">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:descendantFocusability="blocksDescendants"/>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
            android:id="@+id/progress_bar_messages_loaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/accent"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_above="@id/toolbar_bottom"/>

    <RelativeLayout
            android:id="@+id/toolbar_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:padding="8dp">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_message_hint"
                android:layout_toStartOf="@id/btn_send">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="64dp"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
                android:id="@+id/btn_attach_file"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Attach File"
                android:src="@drawable/ic_attach_file"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/btn_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="?attr/colorPrimary"
                android:onClick="onAttachFileButtonClick"
                android:visibility="visible"
        />

        <ImageButton
                android:id="@+id/btn_attach_file_preview"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Attach File"
                android:src="@drawable/ic_cancel"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/btn_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/black"
                android:padding="8dp"
                app:tint="?attr/colorPrimary"
                android:onClick="onAttachFilePreviewButtonClick"
                android:visibility="gone"
        />

        <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Send Icon"
                android:src="@drawable/ic_send"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                app:tint="?attr/colorPrimary"
                android:onClick="onSendButtonClick"/>

    </RelativeLayout>

</RelativeLayout>
