<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/appTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@color/material_dynamic_primary90"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="10sp"/>

    <TextView
            android:text="@string/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@id/appTitle"
            android:id="@+id/info" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@color/material_dynamic_secondary90"
            android:gravity="center"
            android:paddingVertical="10sp" android:layout_marginTop="52dp" />

    <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="8dp"/>
        <EditText
                android:id="@+id/inputTextName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                android:autofillHints="username"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100sp"
            app:layout_constraintTop_toBottomOf="@id/inputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    <!-- Buttons or other views -->
    <Button
            android:id="@+id/buttonInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:text="@string/button_insert" tools:ignore="ButtonStyle"
            android:onClick="onClickInsert"/>

    <Button
            android:id="@+id/buttonRetrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_retrieve" tools:ignore="ButtonStyle"
            android:onClick="onClickRetrieve"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
