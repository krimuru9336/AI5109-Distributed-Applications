<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical" android:padding="8dp">
    <LinearLayout
            android:id="@+id/layout_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chat_shape"
            android:backgroundTint="@color/member_message"
            android:padding="8dp"
            android:layout_marginEnd="80dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                <TextView
                        android:id="@+id/text_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Member"
                        android:textColor="@color/secondary_text"/>
                <TextView
                        android:id="@+id/text_member_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        tools:text=""/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp">

                <TextView
                        android:id="@+id/text_member_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        tools:text="10:00"/>
                <TextView
                        android:id="@+id/text_member_edited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/edited_msg"
                        android:layout_alignParentBottom="true"
                        android:textStyle="italic"
                        android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
        <ImageView
                android:id="@+id/img_member_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:contentDescription="Image"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="gone"/>
        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_member_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:contentDescription="Gif"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="gone"/>
        <RelativeLayout
                android:id="@+id/layout_member_video_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <VideoView
                    android:id="@+id/video_member_media"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true">
            </VideoView>
            <ImageView
                    android:id="@+id/img_member_play_video"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play_arrow"
                    android:layout_centerInParent="true"
                    android:contentDescription="Play Button"
                    app:tint="@color/white"
                    android:focusable="false"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/layout_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chat_shape"
            android:backgroundTint="@color/accent_light"
            android:padding="8dp"
            android:layout_marginStart="80dp"
            android:layout_alignParentEnd="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                <TextView
                        android:id="@+id/text_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Member"
                        android:textColor="@color/secondary_text"/>
                <TextView
                        android:id="@+id/text_sender_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        tools:text=""/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp">

                <TextView
                        android:id="@+id/text_sender_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        tools:text="10:00"/>
                <TextView
                        android:id="@+id/text_sender_edited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/edited_msg"
                        android:layout_alignParentBottom="true"
                        android:textStyle="italic"
                        android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
        <ImageView
                android:id="@+id/img_sender_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:contentDescription="Image"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="gone"/>
        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_sender_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:contentDescription="Gif"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="gone"/>
        <RelativeLayout
                android:id="@+id/layout_sender_video_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <VideoView
                    android:id="@+id/video_sender_media"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true">
            </VideoView>
            <ImageView
                    android:id="@+id/img_sender_play_video"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play_arrow"
                    android:layout_centerInParent="true"
                    android:contentDescription="Play Button"
                    app:tint="@color/white"
                    android:focusable="false"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
