<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:padding="10dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_edit_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:contentDescription="@string/edit_message"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>

        <ImageButton
            android:id="@+id/button_delete_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:contentDescription="@string/delete_message"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>
